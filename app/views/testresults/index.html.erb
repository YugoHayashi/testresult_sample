<% provide(:title, 'All testresults') %>
<h3>テスト一覧</h3>

<%= search_form_for @q do |f| %>
  <%= f.label :jap_result_or_math_result_or_eng_result_soci_result_sci_result, "点数" %>
  <%= f.number_field :jap_result_or_math_result_or_eng_result_or_soci_result_or_sci_result_gteq %>〜
  <%= f.number_field :jap_result_or_math_result_or_eng_result_or_soci_result_or_sci_result_lt %>

  <%= f.label :name1, "テキスト" %>
  <%= f.search_field :name1_cont %>

  <%= f.submit "検索" %>

<% end %>  

<%= link_to "新規登録", testresults_path, class: "btn btn-lg btn-primary" %>
<P><br></P>

<table border="1">
  <tbody>
    <thead>
      <tr>
        <th>ID</th>
        <th>ユーザ名</th>
        <th>国語</th>
        <th>数学</th>
        <th>英語</th>
        <th>社会</th>
        <th>理科</th>
        <th colspan="2">操作</th>
      </tr>
    </thead>
    <% @tests.each do |results| %>
      <tr>
        <td><%= results.id %></td>
        <td><%= link_to results.name1, "#" %></td>
        <td><%= results.jap_result %></td>
        <td><%= results.math_result %></td>
        <td><%= results.eng_result %></td>
        <td><%= results.soci_result %></td>
        <td><%= results.sci_result %></td>
        <td><%= link_to "編集", results %></td>
        <td><%= link_to "削除", results, method: :delete, data: { confirm: "削除しますか?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tests %>