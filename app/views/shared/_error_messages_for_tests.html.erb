<% if @test.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      フォームには <%= pluralize(@test.errors.count, "個のエラーがあります") %>.
    </div>
    <ul>
    <% @test.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>